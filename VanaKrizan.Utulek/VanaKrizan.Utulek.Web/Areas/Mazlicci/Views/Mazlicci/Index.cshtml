@{

    if (Model != null && Model.Pets != null && Model.Pets.Count > 0)
    {
        <section class="py-5 mazlici">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                    @foreach (var pet in Model.Pets)
                    {
                        <div class="col mb-5">
                            <div class="card h-100 mazlik">
                                <!-- Product image-->
                                <img class="card-img-top" src="@pet.ImageSrc" alt="@pet.Name" />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder"> @pet.Name </h5>
                                        <!-- Product price-->
                                        Narozen: @pet.Birth
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center">
                                        <a class="btn btn-outline-dark mt-auto" asp-area="Mazlicci" asp-controller="Mazlicci" asp-action="Detail" asp-route-id="@pet.Id">Detail</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

    }

    if (User.Identity.IsAuthenticated)
    {
        <div class="nadpis">
            <h1>Tebou virtuálně adoptovaní</h1>
        </div>
        <section class="py-5 mazlici">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var pet in Model.Carousels)
                {
                    <div class="col mb-5">
                        <div class="card h-100 mazlik">
                            <!-- Product image-->
                            <img class="card-img-top" src="@pet.ImageSrc" alt="@pet.Name" />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"> @pet.Name </h5>
                                    <!-- Product price-->
                                    Narozen: @pet.Birth
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a class="btn btn-outline-dark mt-auto" asp-area="Mazlicci" asp-controller="Mazlicci" asp-action="Detail" asp-route-id="@pet.Id">Detail</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                </div>
            </div>
        </section>
    }
}


@section Styles {
    <link rel="stylesheet" href="~/css/mazlicci.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
}