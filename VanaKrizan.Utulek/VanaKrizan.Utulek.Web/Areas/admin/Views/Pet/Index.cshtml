@model IList<Pet>

@{
    ViewData["Title"] = "Pet Admin";
}
<h1>@ViewData["Title"]</h1>

<a asp-action="ChooseType"> Create Pet </a>

@{
    if (Model != null && Model.Count > 0)
    {

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@nameof(Pet.Id)</th>
                    <th scope="col">@nameof(Pet.Name)</th>
                    <th scope="col">@nameof(Pet.Sex)</th>
                    <th scope="col">@nameof(Pet.Birth)</th>
                    <th scope="col">@nameof(Pet.InShelterSince)</th>
                    <th scope="col"> Delete </th>
                    <th scope="col">  </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <th scope="row">@Model[i].Id</th>
                        <td>@Model[i].Name</td>
                        <td>@Model[i].Sex</td>
                        <td>@Model[i].Birth</td>
                        <td>@Model[i].InShelterSince</td>
                        <td><a asp-action="Delete" asp-route-id="@Model[i].Id" onclick="return ConfirmDelete();">X</a></td>
                        <td><a asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
}


@section Scripts {
    <script src="~/js/dialogs.js"></script>

}
