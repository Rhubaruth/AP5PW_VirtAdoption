@model IList<Breed>

@{
    ViewData["Title"] = "Breed Admin";
}
<h1>@ViewData["Title"]</h1>

<div class="createPet">
    <a asp-action="Create"> Create Breed </a>
</div>

@{
    if (Model != null && Model.Count > 0)
    {

        <table class="tableAdmin">
            <thead>
                <tr>
                    <th scope="col">@nameof(Breed.Id)</th>
                    <th scope="col">@nameof(Breed.Name)</th>
                    <th scope="col"> Delete </th>
                    <th scope="col">  </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <th scope="row">@Model[i].Id</th>
                        <td>@Model[i].Name</td>
                        <td><a asp-action="Delete" asp-route-id="@Model[i].Id" onclick="return ConfirmDelete();">X</a></td>
                        <td><a asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
}


@section Scripts {
    <script src="~/js/dialogs.js"></script>

}


@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

}
