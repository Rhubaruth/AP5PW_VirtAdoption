@using VanaKrizan.Utulek.Domain.Entities;
@model PetConjoined

@{

    <div class="container">
        <div class="card-platba">
        <form asp-action="Platba" method="post" id="form">
            <button type="submit" class="proceed">
                <svg class="sendicon" width="24" height="24" viewBox="0 0 24 24">
                    <path d="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z"></path>
                </svg>
            </button>

                <input type="hidden" asp-for="pet.Id" />
                <input type="hidden" asp-for="breed.Id" />
                <input type="hidden" asp-for="breed.Name" />
                <input type="hidden" asp-for="size.Id" />
                <input type="hidden" asp-for="size.Name" />
                <input type="hidden" asp-for="cost" />
            <div class="col-md-12 col-sm-12 col-lg-12">
                <p>Karta</p>
                <label>Card number:</label>
                <input id="user" type="number" oninput="this.value = this.value.slice(0, 16)" class="input cardnumber" placeholder="1234 5678 9101 1121" required />
                <div class="spodek">
                        <label>Expiry date:</label>
                        <div class="dateF ">
                            <input class="date_value expire name input" placeholder="MM / YYYY" required />
                        </div>
                    <label class="toleft right">CCV:</label>
                    <input type="number" oninput="this.value = this.value.slice(0, 3)" class="input toleft ccv" placeholder="321" required />
                </div>
            </div>
        </form>
        </div>
        <div class="receipt">
            <div class="rovne">
                <div class="col">
                    <div class="nazev"> <p>Cena:</p></div>
                    <div class="rovne2 nahoru">
                        <h2 class="cost">@Model.cost Kč</h2><br>
                    </div>
                </div>
                <div class="col">
                    <div class="nazev"> <p>Mazlíček:</p></div>
                    <div class="rovne2">  <h2 class="bought-items">@Model.pet.Name</h2> </div>
                </div><br>
            </div>
            <div class="text ">
                <p class="comprobe">Děkujeme za pomoc mazlíčkům v našem útulku.</p>
            </div>
            
        </div>
    </div>
}

@section Styles {
    <link rel="stylesheet" href="~/css/platba.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/platba.js"></script>
}